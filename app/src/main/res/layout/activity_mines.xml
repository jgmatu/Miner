<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_miner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="es.urjc.mov.javsan.miner.MinerActivity">

    <!-- Distribruido por pesos... -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="@string/game_score"
            android:textSize="24dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/game_score"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"/>

    </LinearLayout>

    <TableLayout
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.88"
        android:orientation="horizontal">
    </TableLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12">

        <Button
            android:id="@+id/buton_radar"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:text="@string/radar"
            android:textSize="24dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/num_radar"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:text="0"
            android:textSize="29dp"
            android:gravity="center"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/winner_image"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/boom_image"
        android:layout_width="0dp"
        android:layout_height="0dp" />

</LinearLayout>